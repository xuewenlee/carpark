<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Plate Number :"
        android:id="@+id/txtVPlateNo"
        android:layout_alignBottom="@+id/edTxtPlateNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration (per hour) :"
        android:id="@+id/txtVDuration"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/txtVPlateNo"
        android:layout_alignLeft="@+id/txtVTime"
        android:layout_alignStart="@+id/txtVTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time :"
        android:id="@+id/txtVTime"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate per Hour :"
        android:id="@+id/txtVRate"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/txtVTotal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total (RM) :"
        android:id="@+id/txtVTotal"
        android:layout_above="@+id/btnPaypal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edTxtPlateNo"
        android:text=" "
        android:layout_toRightOf="@+id/txtVStartTime"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonTest"
        android:onClick="onClickTest"
        android:layout_below="@+id/txtVTotal"
        android:layout_alignLeft="@+id/edTxtPlateNo"
        android:layout_alignStart="@+id/edTxtPlateNo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PayPal"
        android:id="@+id/btnPaypal"
        android:onClick="onClickPayPal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtVRate"
        android:layout_alignEnd="@+id/txtVRate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:id="@+id/txtVStartTime"
        android:layout_alignBottom="@+id/txtVTime"
        android:layout_alignRight="@+id/txtVDuration"
        android:layout_alignEnd="@+id/txtVDuration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:id="@+id/txtVEndTime"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/txtVTo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date    :"
        android:id="@+id/txtVDate"
        android:layout_above="@+id/txtVRate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today Date"
        android:id="@+id/txtVCurrentDate"
        android:layout_alignTop="@+id/txtVDate"
        android:layout_alignLeft="@+id/txtVStartTime"
        android:layout_alignStart="@+id/txtVStartTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:id="@+id/txtVTo"
        android:layout_alignTop="@+id/txtVStartTime"
        android:layout_toLeftOf="@+id/numberPicker"
        android:layout_toStartOf="@+id/numberPicker" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:onClick="onClickNumberPicker"
        android:orientation="horizontal"
        android:layout_below="@+id/edTxtPlateNo"
        android:layout_alignRight="@+id/buttonTest"
        android:layout_alignEnd="@+id/buttonTest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.6"
        android:id="@+id/txtVTotalPrice"
        android:layout_below="@+id/txtVRate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ringgit per Hour"
        android:id="@+id/txtVPrice"
        android:layout_alignTop="@+id/txtVRate"
        android:layout_toRightOf="@+id/txtVStartTime"
        android:layout_toEndOf="@+id/txtVStartTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtVNoti"
        android:layout_below="@+id/txtVTotalPrice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="showNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invoke noti"
        android:id="@+id/btnTest"
        android:layout_above="@+id/buttonTest"
        android:layout_alignRight="@+id/txtVCurrentDate"
        android:layout_alignEnd="@+id/txtVCurrentDate"
        android:onClick="fnCallNotif"/>


</RelativeLayout>
